<!-- File: /views/partials/pagination.ejs -->
<% if (pagination && pagination.totalPages > 1) { %>
    <nav class="d-flex justify-content-center mt-4">
        <ul class="pagination">
            <% 
                const createQueryString = (page) => {
                    const params = new URLSearchParams(queryParams);
                    params.set('page', page);
                    return params.toString();
                };
            %>

            <!-- Nút Previous -->
            <li class="page-item <%= (pagination.currentPage === 1) ? 'disabled' : '' %>">
                <a class="page-link" href="?<%= createQueryString(pagination.currentPage - 1) %>">Trước</a>
            </li>
            
            <!-- Các nút số trang -->
            <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                <li class="page-item <%= (i === pagination.currentPage) ? 'active' : '' %>">
                    <a class="page-link" href="?<%= createQueryString(i) %>"><%= i %></a>
                </li>
            <% } %>
            
            <!-- Nút Next -->
            <li class="page-item <%= (pagination.currentPage === pagination.totalPages) ? 'disabled' : '' %>">
                <a class="page-link" href="?<%= createQueryString(pagination.currentPage + 1) %>">Sau</a>
            </li>
        </ul>
    </nav>
<% } %>