<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center mb-4">Tạo tài khoản</h1>
        
        <!-- Hộp thoại thông báo -->
        <div id="alertBox" class="alert" style="display: none;"></div>
        
        <form id="registerForm">
            <div class="mb-3">
                <label for="ho_ten" class="form-label">Họ và tên</label>
                <input type="text" class="form-control" id="ho_ten" required>
            </div>
            <div class="mb-3">
                <label for="ten_dang_nhap" class="form-label">Tên đăng nhập</label>
                <input type="text" class="form-control" id="ten_dang_nhap" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Địa chỉ email</label>
                <input type="email" class="form-control" id="email" required>
            </div>
            <div class="mb-3">
                <label for="mat_khau" class="form-label">Mật khẩu</label>
                <input type="password" class="form-control" id="mat_khau" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Đăng Ký</button>
        </form>
        <div class="text-center mt-3">
            <p>Đã có tài khoản? <a href="/login">Đăng nhập ngay</a></p>
        </div>
    </div>
</div>

<!-- Link đến file script xử lý form -->
<script src="/js/auth.js"></script> 

<%- include('../partials/footer') %>